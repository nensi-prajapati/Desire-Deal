<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyOrders">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/pink"
        app:title="My Orders"
        app:titleTextColor="@color/white">

    </com.google.android.material.appbar.MaterialToolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <TextView
            android:id="@+id/topfq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="In Process"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/firstcard"
            android:layout_marginVertical="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_30sdp"
            android:layout_below="@+id/topfq">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/first"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Korean Style"/>


                <TextView
                    android:id="@+id/price"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:text="₹ 400"/>


                <TextView
                    android:id="@+id/firsttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Expected Delivery Within 4 Days." />

                <TextView
                    android:id="@+id/status"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:layout_below="@+id/first"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/pink"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/secondcard"
            android:layout_marginVertical="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_30sdp"
            android:layout_below="@+id/firstcard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/second"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Twin cloth"/>

                <TextView
                    android:id="@+id/price1"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:text="₹ 600"/>

                <TextView
                    android:id="@+id/secondtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/second"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Expected Delivery Within 6 Days." />

                <TextView
                    android:id="@+id/status1"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:layout_below="@+id/second"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/pink"
                    android:layout_height="wrap_content"
                    android:text="Pending"/>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_below="@+id/secondcard"
            android:text="In Process"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/thirdcard"
            android:layout_marginVertical="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_30sdp"
            android:layout_below="@+id/heading">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/third"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Long shirt"/>

                <TextView
                    android:id="@+id/price3"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:text="₹ 600"/>

                <TextView
                    android:id="@+id/thirdtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/third"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Delivered in 6 Days." />

                <TextView
                    android:id="@+id/status3"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:layout_below="@+id/third"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/pink"
                    android:layout_height="wrap_content"
                    android:text="Delivered"/>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fourthcard"
            android:layout_marginVertical="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_30sdp"
            android:layout_below="@+id/thirdcard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fourth"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Designer Blazer"/>


                <TextView
                    android:id="@+id/price4"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:text="₹ 400"/>


                <TextView
                    android:id="@+id/fourthtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fourth"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Delivered in 8 Days." />

                <TextView
                    android:id="@+id/status4"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:layout_below="@+id/fourth"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/pink"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/fifthcard"
            android:layout_marginVertical="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_30sdp"
            android:layout_below="@+id/fourthcard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fifth"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pink Sweater Children"/>


                <TextView
                    android:id="@+id/price5"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:text="₹ 400"/>


                <TextView
                    android:id="@+id/fifthtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fifth"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Delivered in 10 Days." />

                <TextView
                    android:id="@+id/status5"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:layout_below="@+id/fifth"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/pink"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelled"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/sixcard"
            android:layout_marginVertical="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_30sdp"
            android:layout_below="@+id/fifthcard">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/six"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Watch"/>


                <TextView
                    android:id="@+id/price6"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:text="₹ 400"/>


                <TextView
                    android:id="@+id/sixtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/six"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="Delivered in 11 Days." />

                <TextView
                    android:id="@+id/status6"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:layout_below="@+id/six"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/pink"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelled"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>





    </RelativeLayout>

</RelativeLayout>