<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpink"
    tools:context=".activity.Payment">

  <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar1"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/pink"
      app:title="Payment"
      app:titleTextColor="@color/white">

  </com.google.android.material.appbar.MaterialToolbar>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_below="@+id/toolbar1"
      >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        >
      <RadioGroup
          android:id="@+id/payment_radio_group"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Payment Options"
          android:textStyle="bold"
          android:textSize="@dimen/_15sdp">

        <RadioButton
            android:id="@+id/paypal_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PayPal"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/paytm_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paytm"/>

        <RadioButton
            android:id="@+id/gpay_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPay"/>

        <RadioButton
            android:id="@+id/cod_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash On Delivery"/>

      </RadioGroup>
    </androidx.cardview.widget.CardView>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/AddAddress"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_40sdp"
      android:layout_alignParentBottom="true"
      >

    <TextView
        android:id="@+id/Pay_now"
        android:background="@color/pink"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="PAY â‚¹400 NOW"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp" />

  </LinearLayout>
</RelativeLayout>
