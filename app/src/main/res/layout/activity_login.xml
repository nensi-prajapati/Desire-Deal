<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Login"
    android:gravity="center"
    android:background="@drawable/sign_in_up">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:cardCornerRadius="@dimen/_100sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"/>

        </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:text="Log into your account"
            android:textColor="@color/white"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"/>


        <EditText
            android:id="@+id/Username1"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/_15sdp"
            android:backgroundTint="@color/white"
            android:inputType="textEmailAddress"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Email"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />


        <EditText
            android:id="@+id/password1"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:textSize="@dimen/_15sdp"
            android:backgroundTint="@color/white"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Password"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_minus12sdp"
                android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:layout_marginStart="@dimen/_minus5sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/Forgotpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frorget Password?"
                android:layout_marginStart="@dimen/_40sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"/>
        </LinearLayout>


        <Button
            android:id="@+id/login1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_8sdp"
            android:text="Login"
            android:textSize="@dimen/_15sdp"
            android:visibility="visible"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:minWidth="120dp"
            android:includeFontPadding="false"
            android:background="@drawable/roundable"
            app:backgroundTint="@color/pink"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"/>

        <Button

            android:id="@+id/signup1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Sign Up"
            android:textSize="@dimen/_15sdp"
            android:visibility="visible"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:minWidth="120dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:background="@drawable/roundable"
            app:backgroundTint="@color/white" />




    </LinearLayout>

</RelativeLayout>