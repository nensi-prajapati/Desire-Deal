<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemforcategory"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_200sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        android:visibility="visible">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/specialityCategoryImageView"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_135sdp"
                android:scaleType="centerCrop"/>



        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/specialityCategoryNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BollyWood Style"
                android:layout_marginTop="@dimen/_145sdp"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/outspetext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desire Deal"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/gray"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_gravity="center_vertical"
                android:progressTint="@color/pink"
                android:secondaryProgressTint="@color/pink"
                android:numStars="5"
                android:stepSize="0.3"
                android:rating="3" />

                <ImageView
                    android:id="@+id/wishlist"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/wishlist"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_35sdp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:paddingTop="@dimen/_170sdp"
            android:paddingStart="@dimen/_10sdp">




        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>